<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mycj.weather.MainActivity">

    <TextView
        android:id="@+id/tv_now_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/tv_current_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="当前城市：深圳"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_current_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center"
        android:text="当前天气：多云"
        android:layout_below="@id/tv_current_city"
        />

    <TextView
        android:id="@+id/tv_current_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center"
        android:text="温度：26"
        android:layout_below="@id/tv_current_weather"
        />

    <TextView
        android:id="@+id/tv_current_wind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center"
        android:text="风向：南"
        android:layout_below="@id/tv_current_temp"
        />





</RelativeLayout>
